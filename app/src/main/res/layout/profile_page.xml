<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sharity.itu.sharity.MainActivity"
    android:background="@color/colorPrimaryDark"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:id="@+id/homePage"
    android:nestedScrollingEnabled="false"
    android:textAlignment="center"
    android:clickable="false">

    <Button
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:text="@string/Str_Home_Btn"
        android:id="@+id/homeBtn"
        android:typeface="normal"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:contextClickable="true"
        android:enabled="true"
        android:focusable="false"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:textStyle="normal"
        android:focusableInTouchMode="true"
        android:textAllCaps="false"
        android:layout_below="@+id/image1"
        android:layout_alignRight="@+id/image1"
        android:layout_alignEnd="@+id/image1"
        android:visibility="visible"
        android:ellipsize="end" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:id="@+id/image1"
        android:src="@drawable/img"
        android:contentDescription="@string/Str_Logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:hint="First name  |  Last name"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:enabled="true"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/myProfile_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:clickable="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/old_pwd"
        android:hint="Current password"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/interest"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/new_pwd"
        android:hint="New password"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/old_pwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="false"
        android:enabled="true"
        android:focusable="true"
        android:clickable="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/re_new_pwd"
        android:hint="New password confirmation"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/new_pwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true" />

    <EditText
        android:id="@+id/course"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_weight="3"
        android:ems="10"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:hint="Current program"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:enabled="true"
        android:theme="@style/MyEditTextTheme"
        android:inputType="none"
        android:visibility="visible"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:contextClickable="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/expertise"
        android:enabled="true"
        android:hint="Expertise"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/course"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/interest"
        android:enabled="true"
        android:hint="Topic of interest"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/expertise"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />


    <Button
        android:layout_width="67dp"
        android:layout_height="25dp"
        android:text="@string/Str_Update_Btn"
        android:id="@+id/save_profile"
        android:typeface="normal"
        android:background="@drawable/button_style"
        android:textColor="@color/colorPrimaryDark"
        android:contextClickable="false"
        android:enabled="true"
        android:focusable="true"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:textStyle="normal"
        android:focusableInTouchMode="true"
        android:textAllCaps="false"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:text="@string/Str_Profile_txt"
        android:id="@+id/myProfile_text"
        android:typeface="normal"
        android:background="@drawable/request_desc_field"
        android:textColor="@color/colorPrimaryDark"
        android:enabled="false"
        android:focusable="false"
        android:clickable="false"
        android:textStyle="normal"
        android:focusableInTouchMode="true"
        android:textAllCaps="false"
        android:visibility="visible"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_below="@+id/image1"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
