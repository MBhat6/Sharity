<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http: //schemas.android.com/tools"
    tools:context="com.sharity.itu.sharity.MainActivity"
    android:id="@+id/homePage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:nestedScrollingEnabled="true"
    android:textAlignment="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/Str_Profile_txt"
            android:id="@+id/myProfile_text"
            android:typeface="normal"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:enabled="false"
            android:focusable="false"
            android:clickable="false"
            android:textStyle="normal|bold"
            android:focusableInTouchMode="true"
            android:textAllCaps="false"
            android:visibility="visible"
            android:textSize="16sp"
            android:textAlignment="gravity"
            android:layout_marginTop="7dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="left|center"
            android:paddingLeft="24dp" />


    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:nestedScrollingEnabled="true"
            android:textAlignment="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:clickable="false"
            android:orientation="vertical"
            android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="@string/Str_Update_Btn"
            android:id="@+id/save_profile"
            android:typeface="normal"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:contextClickable="false"
            android:enabled="true"
            android:focusable="false"
            android:clickable="true"
            android:elegantTextHeight="true"
            android:textStyle="normal|bold"
            android:focusableInTouchMode="true"
            android:textAllCaps="true"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_weight="0.01"
            android:layout_marginTop="13dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_profile"
            android:minWidth="220dp"
            android:textStyle="normal|bold"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:typeface="normal"
            android:width="@dimen/sharity_text_w"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@android:string/unknownName"
            android:visibility="visible"
            android:hint="Name"
            android:layout_marginTop="16dp"
            android:textColorHint="@color/sharity_grey"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textCapWords|textPersonName"
            android:ems="10"
            android:id="@+id/name"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:typeface="normal"
            android:enabled="true"
            android:theme="@style/MyEditTextTheme"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:textSize="17sp"
            android:maxLength="50" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prog_header"
            android:minWidth="220dp"
            android:textStyle="normal|bold"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:typeface="normal"
            android:width="@dimen/sharity_text_w"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@android:string/unknownName"
            android:visibility="visible"
            android:hint="Current program"
            android:textColorHint="@color/sharity_grey"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/name"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/course"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:drawableRight="@drawable/arrow_down"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:typeface="normal"
            android:enabled="true"
            android:theme="@style/MyEditTextTheme"
            android:background="@drawable/field_layout"
            android:inputType="text"
            android:visibility="visible"
            android:clickable="true"
            android:contextClickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:layout_below="@+id/prog_header"
            android:layout_alignParentStart="true"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exp_header"
            android:minWidth="220dp"
            android:textStyle="normal|bold"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:textColor="@android:color/white"
            android:typeface="normal"
            android:width="@dimen/sharity_text_w"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@android:string/unknownName"
            android:visibility="visible"
            android:hint="Expertise"
            android:textColorHint="@color/sharity_grey"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/course"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textCapWords|textMultiLine"
            android:ems="10"
            android:id="@+id/expertise"
            android:enabled="true"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:typeface="normal"
            android:theme="@style/MyEditTextTheme"
            android:background="@drawable/field_layout"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:textSize="17sp"
            android:maxLength="190" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/interest_header"
            android:minWidth="220dp"
            android:textStyle="normal|bold"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:textColor="@android:color/white"
            android:typeface="normal"
            android:width="@dimen/sharity_text_w"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@android:string/unknownName"
            android:visibility="visible"
            android:hint="Topic of interest"
            android:textColorHint="@color/sharity_grey"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/expertise"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textCapWords|textMultiLine"
            android:ems="10"
            android:id="@+id/interest"
            android:enabled="true"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:typeface="normal"
            android:theme="@style/MyEditTextTheme"
            android:background="@drawable/field_layout"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:textSize="17sp"
            android:maxLength="190" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/update_header"
            android:minWidth="220dp"
            android:textStyle="normal|bold"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:textColor="@android:color/white"
            android:typeface="normal"
            android:width="@dimen/sharity_text_w"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@android:string/unknownName"
            android:visibility="visible"
            android:hint="Update credentials"
            android:textColorHint="@color/sharity_grey"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/expertise"
            android:layout_alignParentStart="true"
            android:layout_weight="0.01"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pwd_header"
            android:minWidth="220dp"
            android:textStyle="normal|bold"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:textColor="@android:color/white"
            android:typeface="normal"
            android:width="@dimen/sharity_text_w"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@android:string/unknownName"
            android:visibility="visible"
            android:hint="New password"
            android:textColorHint="@color/sharity_grey"
            android:layout_below="@+id/interest"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/re_new_pwd"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:typeface="normal"
            android:theme="@style/MyEditTextTheme"
            android:background="@drawable/field_layout"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"

            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:maxLength="30" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:minWidth="220dp"
            android:textStyle="normal|bold"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:textColor="@android:color/white"
            android:typeface="normal"
            android:width="@dimen/sharity_text_w"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@android:string/unknownName"
            android:visibility="visible"
            android:hint="Re-New password"
            android:textColorHint="@color/sharity_grey"
            android:layout_below="@+id/new_pwd"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/new_pwd"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:typeface="normal"
            android:theme="@style/MyEditTextTheme"
            android:background="@drawable/field_layout"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"

            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:maxLength="30" />

    </LinearLayout>
</RelativeLayout>