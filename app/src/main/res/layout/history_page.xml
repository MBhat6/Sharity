<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sharity.itu.sharity.MainActivity"
    android:background="@color/colorPrimaryDark"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:id="@+id/homePage"
    android:nestedScrollingEnabled="false"
    android:textAlignment="center"
    android:longClickable="true">

    <Button
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:text="@string/Str_Home_Btn"
        android:id="@+id/homeBtn"
        android:typeface="normal"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:contextClickable="true"
        android:enabled="true"
        android:focusable="false"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:textStyle="normal"
        android:focusableInTouchMode="true"
        android:textAllCaps="false"
        android:layout_below="@+id/image1"
        android:layout_alignRight="@+id/image1"
        android:layout_alignEnd="@+id/image1"
        android:visibility="visible"
        android:ellipsize="end" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:id="@+id/image1"
        android:src="@drawable/img"
        android:contentDescription="@string/Str_Logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:minWidth="220dp"
        android:textStyle="normal|bold"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:textColor="@android:color/white"
        android:typeface="normal"
        android:width="@dimen/sharity_text_w"
        android:background="@android:color/transparent"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@android:string/unknownName"
        android:layout_below="@+id/image1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:hint="Name"
        android:textColorHint="@android:color/white" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:id="@+id/history_req"
        android:typeface="normal"
        android:background="@drawable/request_desc_field"
        android:textColor="@color/background_material_dark"
        android:enabled="false"
        android:focusable="false"
        android:clickable="false"
        android:textStyle="normal"
        android:focusableInTouchMode="false"
        android:textAllCaps="false"
        android:visibility="visible"
        android:textSize="16sp"
        android:inputType="none"
        android:textAlignment="center"
        android:hint="My Request"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_below="@+id/homeBtn"
        android:layout_centerHorizontal="true" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expandableListView"
        android:background="@android:color/white"
        android:visibility="visible"
        android:scrollIndicators="right"
        android:layout_below="@+id/history_req"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

</RelativeLayout>
