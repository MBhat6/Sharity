<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sharity.itu.sharity.MainActivity"
    android:background="@color/colorPrimaryDark"
    android:focusableInTouchMode="true"
    android:focusable="false"
    android:id="@+id/homePage"
    android:nestedScrollingEnabled="false"
    android:textAlignment="center"
    android:clickable="true"
    android:contextClickable="true">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:id="@+id/image1"
        android:src="@drawable/img"
        android:contentDescription="@string/Str_Logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/first_name"
        android:hint="First name"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:enabled="true"
        android:theme="@style/MyEditTextTheme"
        android:focusable="true"
        android:visibility="visible"
        android:layout_below="@+id/com_prof_header"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp" />


    <EditText
        android:id="@+id/signUp_course"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_weight="3"
        android:ems="10"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:hint="Current program"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:enabled="true"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/last_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:inputType="text"
        android:focusable="false"
        android:password="false"
        android:phoneNumber="false"
        android:visibility="visible"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:contextClickable="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/SignUp_expertise"
        android:enabled="true"
        android:hint="Expertise"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/signUp_course"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:focusable="true"
        android:nestedScrollingEnabled="true"
        android:scrollIndicators="right" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/SignUp_interest"
        android:enabled="true"
        android:hint="Topic of interest"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/SignUp_expertise"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="true"
        android:visibility="visible"
        android:nestedScrollingEnabled="true" />


    <Button
        android:layout_width="67dp"
        android:layout_height="25dp"
        android:text="@string/Str_Update_Btn"
        android:id="@+id/save_profile"
        android:typeface="normal"
        android:background="@drawable/button_style"
        android:textColor="@color/colorPrimaryDark"
        android:contextClickable="true"
        android:enabled="true"
        android:focusable="false"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:textStyle="normal"
        android:focusableInTouchMode="true"
        android:textAllCaps="false"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:ellipsize="end" />

    <EditText
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:text="@string/profile_com_text"
        android:id="@+id/com_prof_header"
        android:typeface="normal"
        android:background="@drawable/request_desc_field"
        android:textColor="@color/colorPrimaryDark"
        android:enabled="false"
        android:focusable="true"
        android:clickable="true"
        android:textStyle="normal"
        android:focusableInTouchMode="true"
        android:textAllCaps="false"
        android:visibility="visible"
        android:textSize="@dimen/sharity_home_text_font"
        android:textAlignment="center"
        android:layout_below="@+id/image1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/last_name"
        android:hint="Last name"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:enabled="true"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/first_name"
        android:focusable="true"
        android:visibility="visible" />


</RelativeLayout>
