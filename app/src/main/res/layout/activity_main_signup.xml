<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sharity.itu.sharitysignuppage.MainActivity"
    android:background="#3f51b5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Sign Up"
        android:id="@+id/textView"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/editText10"
        android:layout_alignStart="@+id/button" />

    <EditText
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:id="@+id/editText10"
        android:background="@android:color/white"
        android:layout_above="@+id/editText11"
        android:layout_alignEnd="@+id/editText14"
        android:layout_marginBottom="29dp" />

    <EditText
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:id="@+id/editText11"
        android:background="@android:color/white"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignBaseline="@+id/editText13"
        android:layout_alignBottom="@+id/editText13"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:id="@+id/editText12"
        android:background="@android:color/white"
        android:layout_alignWithParentIfMissing="false"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="49dp"
        android:layout_toEndOf="@+id/button" />

    <EditText
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:id="@+id/editText13"
        android:background="@android:color/white"
        android:layout_above="@+id/editText14"
        android:layout_alignStart="@+id/editText11"
        android:layout_marginBottom="29dp" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:id="@+id/editText14"
        android:background="@android:color/white"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/editText16"
        android:layout_alignEnd="@+id/editText11"
        android:layout_alignParentEnd="false" />

    <EditText
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:id="@+id/editText15"
        android:background="@android:color/white"
        android:layout_below="@+id/editText16"
        android:layout_marginTop="34dp"
        android:layout_alignEnd="@+id/editText17"
        android:layout_toEndOf="@+id/textView4" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText16"
        android:background="@android:color/white"
        android:layout_alignEnd="@+id/editText15"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:id="@+id/editText17"
        android:background="@android:color/white"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@+id/editText12"
        android:layout_marginBottom="33dp"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Save"
        android:id="@+id/button"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:textColor="#3f51b5"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="right|center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="First Name:"
        android:id="@+id/textView2"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_gravity="center|top"
        android:layout_alignBaseline="@+id/editText10"
        android:layout_alignBottom="@+id/editText10"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Last Name:"
        android:id="@+id/textView3"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_gravity="center|top"
        android:layout_below="@+id/editText10"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Current Program:"
        android:id="@+id/textView4"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_gravity="center|top"
        android:layout_below="@+id/editText13"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Expertise:"
        android:id="@+id/textView5"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_gravity="center|top"
        android:layout_below="@+id/editText14"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Topic of Interest:"
        android:id="@+id/textView6"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_gravity="center|top"
        android:layout_alignTop="@+id/editText15"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="New Password:"
        android:id="@+id/textView7"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_gravity="left"
        android:layout_alignTop="@+id/editText17"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Confirm New Password:"
        android:id="@+id/textView8"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_gravity="left"
        android:layout_alignTop="@+id/editText12"
        android:layout_alignParentStart="true" />

</RelativeLayout>
