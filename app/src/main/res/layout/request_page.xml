<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sharity.itu.sharity.MainActivity"
    android:background="@color/colorPrimaryDark"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:id="@+id/homePage"
    android:nestedScrollingEnabled="false"
    android:textAlignment="center"
    android:clickable="false">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:id="@+id/image1"
        android:src="@drawable/img"
        android:contentDescription="@string/Str_Logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:minWidth="220dp"
        android:textStyle="normal|bold"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:textColor="@android:color/white"
        android:typeface="normal"
        android:width="@dimen/sharity_text_w"
        android:background="@android:color/transparent"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@android:string/unknownName"
        android:visibility="visible"
        android:layout_below="@+id/image1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="none"
        android:hint="Name"
        android:textColorHint="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoryTxt"
        android:minHeight="@dimen/sharity_request_text"
        android:enabled="false"
        android:focusable="false"
        android:minWidth="@dimen/login_Text_w"
        android:text="@string/Str_Category_txt"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:typeface="normal"
        android:textStyle="normal|bold"
        android:background="@android:color/transparent"
        android:elegantTextHeight="true"
        android:textSize="@dimen/sharity_home_text_font"
        android:inputType="none"
        android:layout_below="@+id/reqPageTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <EditText
        android:id="@+id/categoryId"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_weight="3"
        android:ems="10"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:hint="Select a category"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:enabled="true"
        android:focusable="false"
        android:background="@drawable/request_box_fields"
        android:theme="@style/MyEditTextTheme"
        android:layout_alignTop="@+id/categoryTxt"
        android:layout_toRightOf="@+id/categoryTxt"
        android:layout_toEndOf="@+id/categoryTxt"
        android:visibility="visible"
        android:textAlignment="center"
        android:textSize="@dimen/sharity_dropdown_text_size"
        android:inputType="none" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priorityTxt"
        android:minHeight="@dimen/sharity_request_text"
        android:enabled="false"
        android:focusable="false"
        android:minWidth="@dimen/login_Text_w"
        android:text="@string/Str_Priority_txt"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:typeface="normal"
        android:textStyle="normal|bold"
        android:background="@android:color/transparent"
        android:elegantTextHeight="true"
        android:textSize="@dimen/sharity_home_text_font"
        android:layout_below="@+id/categoryId"
        android:layout_toLeftOf="@+id/priorityId"
        android:layout_toStartOf="@+id/priorityId"
        android:inputType="none" />

    <EditText
        android:id="@+id/priorityId"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_weight="3"
        android:ems="10"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:hint="Select priority"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:enabled="true"
        android:focusable="false"
        android:background="@drawable/request_box_fields"
        android:theme="@style/MyEditTextTheme"
        android:visibility="visible"
        android:textAlignment="center"
        android:textSize="@dimen/sharity_dropdown_text_size"
        android:layout_alignTop="@+id/priorityTxt"
        android:layout_alignLeft="@+id/categoryId"
        android:layout_alignStart="@+id/categoryId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleTxt"
        android:minHeight="@dimen/sharity_request_text"
        android:enabled="false"
        android:focusable="false"
        android:minWidth="@dimen/login_Text_w"
        android:text="@string/Str_Title_txt"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:typeface="normal"
        android:textStyle="normal|bold"
        android:background="@android:color/transparent"
        android:elegantTextHeight="true"
        android:textSize="@dimen/sharity_home_text_font"
        android:layout_below="@+id/priorityTxt"
        android:layout_toLeftOf="@+id/priorityId"
        android:layout_toStartOf="@+id/priorityId"
        android:inputType="none" />

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_weight="3"
        android:ems="10"
        android:hint="Title"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:enabled="true"
        android:focusable="true"
        android:background="@drawable/request_box_fields"
        android:theme="@style/MyEditTextTheme"
        android:visibility="visible"
        android:textAlignment="center"
        android:textSize="@dimen/sharity_dropdown_text_size"
        android:layout_below="@+id/priorityId"
        android:layout_alignLeft="@+id/priorityId"
        android:layout_alignStart="@+id/priorityId"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descTxt"
        android:minHeight="@dimen/sharity_request_text"
        android:enabled="false"
        android:focusable="false"
        android:minWidth="@dimen/login_Text_w"
        android:text="@string/Str_Desc_txt"
        android:textAlignment="textStart"
        android:layout_gravity="start"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:typeface="normal"
        android:textStyle="normal|bold"
        android:background="@android:color/transparent"
        android:elegantTextHeight="true"
        android:textSize="@dimen/sharity_home_text_font"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="none" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="145dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/desc"
        android:layout_below="@+id/descTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/request_desc_field"
        android:enabled="true"
        android:hint="Enter desciption"
        android:textAlignment="center"
        android:textColor="@color/custom_sharity"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/sharity_home_text_font"
        android:typeface="normal"
        android:visibility="visible"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="67dp"
        android:layout_height="25dp"
        android:text="@string/Str_CreateReq_txt"
        android:id="@+id/Create"
        android:typeface="normal"
        android:background="@drawable/button_style"
        android:textColor="@color/colorPrimaryDark"
        android:contextClickable="false"
        android:enabled="true"
        android:focusable="true"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:textStyle="normal"
        android:focusableInTouchMode="true"
        android:textAllCaps="false"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="105dp"
        android:layout_height="26dp"
        android:id="@+id/reqPageTxt"
        android:typeface="normal"
        android:background="@drawable/request_desc_field"
        android:textColor="@android:color/white"
        android:enabled="false"
        android:focusable="false"
        android:clickable="false"
        android:textStyle="normal"
        android:focusableInTouchMode="false"
        android:textAllCaps="false"
        android:visibility="visible"
        android:textSize="16sp"
        android:inputType="none"
        android:textAlignment="center"
        android:hint="New Request"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_below="@+id/homeBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:text="@string/Str_Home_Btn"
        android:id="@+id/homeBtn"
        android:typeface="normal"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:contextClickable="true"
        android:enabled="true"
        android:focusable="false"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:textStyle="normal"
        android:focusableInTouchMode="true"
        android:textAllCaps="false"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/image1"
        android:ellipsize="end" />


</RelativeLayout>
