<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sharity.itu.sharity.MainActivity"
    android:background="@color/colorPrimaryDark"
    android:focusableInTouchMode="true"
    android:focusable="false"
    android:id="@+id/homePage"
    android:nestedScrollingEnabled="false"
    android:textAlignment="center"
    android:clickable="true"
    android:contextClickable="true">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:id="@+id/image1"
        android:src="@drawable/img"
        android:contentDescription="@string/Str_Logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/SignUp_new_pwd"
        android:hint="Password"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signUp_re_new_pwd"
        android:hint="Password confirmation"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/SignUp_new_pwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="67dp"
        android:layout_height="25dp"
        android:text="@string/Str_sign_up_Btn"
        android:id="@+id/create_acc"
        android:typeface="normal"
        android:background="@drawable/button_style"
        android:textColor="@color/colorPrimaryDark"
        android:contextClickable="true"
        android:enabled="true"
        android:focusable="false"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:textStyle="normal"
        android:focusableInTouchMode="true"
        android:textAllCaps="false"
        android:visibility="visible"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/signUp_re_new_pwd"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:layout_alignParentEnd="false" />

    <EditText
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:text="@string/Str_sign_up_header"
        android:id="@+id/signUp_header"
        android:typeface="normal"
        android:background="@drawable/request_desc_field"
        android:textColor="@color/colorPrimaryDark"
        android:enabled="false"
        android:focusable="true"
        android:clickable="true"
        android:textStyle="normal"
        android:focusableInTouchMode="true"
        android:textAllCaps="false"
        android:visibility="visible"
        android:textSize="@dimen/sharity_home_text_font"
        android:textAlignment="center"
        android:layout_below="@+id/image1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/signUp_email"
        android:enabled="true"
        android:hint="E-mail address"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:inputType="textEmailAddress"
        android:focusable="true"
        android:visibility="visible"
        android:layout_above="@+id/SignUp_new_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />


</RelativeLayout>
