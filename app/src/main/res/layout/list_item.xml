<?xml version="1.0" encoding="utf-8"?>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:id="@+id/expandedListItem"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:textColor="#4e4d4e"
                android:textColorHint="#4e4d4e"
                android:typeface="normal"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/dateItem"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                />
            <TextView
                android:id="@+id/categoryItem"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                />

    <EditText
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/expandedListDesc"
        android:background="@drawable/field_layout"
        android:enabled="false"
        android:textColor="#4e4d4e"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="14sp"
        android:textAlignment="gravity"
        android:gravity="top"
        android:typeface="normal"
        android:visibility="visible"
        android:layout_alignParentStart="true"
        android:maxLength="1200"
        android:layout_marginLeft="41dp"
        android:scrollIndicators="right" />

    <Button
                android:id="@+id/button"
                android:layout_width="60dp"
                android:layout_height="22dp"
        android:text="Comments"
                android:background="@drawable/bg_style"
                android:textColor="@android:color/white"
                android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="8sp"
        android:textStyle="normal" />
</LinearLayout>