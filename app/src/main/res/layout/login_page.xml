<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sharity.itu.sharity.MainActivity"
    android:background="@color/colorPrimaryDark"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:id="@+id/homePage"
    android:nestedScrollingEnabled="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon"
        android:src="@drawable/img_old"
        android:contentDescription="@string/Str_Logo"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="@string/Str_SignUp_txt"
        android:id="@+id/signUpBtn"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="53dp"
        android:background="@android:color/transparent"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:ellipsize="end"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:minHeight="@dimen/abc_action_bar_progress_bar_size"
        android:minWidth="@dimen/login_Text_w"
        android:textStyle="normal|bold"
        android:textSize="14dp"
        android:textAllCaps="true"
        android:typeface="normal"
        android:visibility="visible"
        android:layout_alignTop="@+id/loginText"
        android:layout_alignEnd="@+id/login"
        android:layout_marginBottom="25dp"
        android:paddingEnd="28dp"
        android:contextClickable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:id="@+id/loginText"
        android:minHeight="@dimen/sharity_login_text_size"
        android:enabled="false"
        android:minWidth="@dimen/login_Text_w"
        android:text="@string/Str_NewUser"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:typeface="normal"
        android:textStyle="normal"
        android:background="@android:color/transparent"
        android:width="@dimen/sharity_text_w"
        android:elegantTextHeight="true"
        android:layout_marginLeft="40dp"
        android:textSize="14dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/signUpBtn"
        android:layout_marginBottom="32dp"
        android:paddingStart="23dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:id="@+id/email_id"
        android:enabled="true"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:background="@drawable/field_layout"
        android:visibility="visible"
        android:focusable="true"
        android:nestedScrollingEnabled="true"
        android:scrollIndicators="right"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="17sp"
        android:maxLength="190"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/emailHeader"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:id="@+id/pwd_id"
        android:enabled="true"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="normal"
        android:theme="@style/MyEditTextTheme"
        android:background="@drawable/field_layout"
        android:visibility="visible"
        android:focusable="true"
        android:nestedScrollingEnabled="true"
        android:scrollIndicators="right"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="17sp"
        android:maxLength="190"
        android:password="true"
        android:inputType="textPassword"
        android:layout_below="@+id/pwdHeader"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/emailHeader"
        android:minHeight="@dimen/sharity_request_text"
        android:enabled="false"
        android:focusable="false"
        android:minWidth="@dimen/login_Text_w"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:typeface="normal"
        android:textStyle="normal|bold"
        android:background="@android:color/transparent"
        android:elegantTextHeight="true"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:inputType="none"
        android:hint="@string/Str_email_text"
        android:textColorHint="@android:color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/icon"
        android:layout_alignEnd="@+id/icon" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/pwdHeader"
        android:minHeight="@dimen/sharity_request_text"
        android:enabled="false"
        android:focusable="false"
        android:minWidth="@dimen/login_Text_w"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:typeface="normal"
        android:textStyle="normal|bold"
        android:background="@android:color/transparent"
        android:elegantTextHeight="true"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:inputType="none"
        android:hint="@string/Str_password"
        android:textColorHint="@android:color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/email_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:text="@string/Str_forgot_pwd"
        android:id="@+id/forgot_pwd"
        android:background="@android:color/transparent"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:ellipsize="end"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:minHeight="@dimen/abc_action_bar_progress_bar_size"
        android:minWidth="@dimen/login_Text_w"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:typeface="normal"
        android:visibility="visible"
        android:gravity="top|center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:contextClickable="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:text="@string/Str_login_Btn"
        android:id="@+id/login"
        android:typeface="normal"
        android:background="@drawable/field_layout"
        android:textColor="@android:color/white"
        android:contextClickable="true"
        android:enabled="true"
        android:focusable="false"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:textStyle="normal|bold"
        android:focusableInTouchMode="true"
        android:textAllCaps="true"
        android:visibility="visible"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/pwd_id" />

</RelativeLayout>
